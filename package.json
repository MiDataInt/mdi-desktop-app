{
  "name": "mdi-desktop-app",
  "version": "v0.0.2",
  "description": "Electron desktop for the Michigan Data Interface apps framework",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "electron-builder --publish always"
  },
  "author": "Thomas E. Wilson",
  "license": "MIT",
  "devDependencies": {
    "electron": "^19.0.10",
    "electron-builder": "^23.1.0"
  },
  "dependencies": {
    "electron-prompt": "^1.7.0",
    "net": "^1.0.2",
    "node-pty": "^0.10.1",
    "xterm": "^4.19.0"
  },
  "build": {
    "appId": "MichiganDataInterface.DesktopApp",
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "publish": "github",
      "icon": "logo/portal_blur.ico"
    },
    "mac": {
      "target": "dmg",
      "publish": "github",
      "icon": "logo/portal_blur.png",
      "category": "public.app-category.utilities"
    }
  }
}
